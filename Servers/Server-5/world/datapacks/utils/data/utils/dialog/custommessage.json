{
  "type": "minecraft:multi_action_input_form",
  "title": "Custom Message",
  "inputs": [
    {
      "type": "minecraft:text",
      "key": "Username",
      "label": "Sender Username",
      "initial": "Custom",
      "max_length": 16
    },
    {
      "type": "minecraft:text",
      "key": "Message",
      "label": "Message content",
      "initial": "Hello, world!",
      "max_length": 256
    }
  ],
  "actions": [
    {
      "label": "Send",
      "id": "SendButton",
      "on_submit": {
        "type": "minecraft:command_template",
        "template": "tellraw @a {\"text\": \"<$(Username)> $(Message)\"}"
      }
    }
  ]
}